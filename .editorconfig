root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.{html,json}]
insert_final_newline = false

[*.php]
indent_style = space
indent_size = 4

[views/*.php]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
